{
  "name": "Hypernotes",
  "description": "Yet another extension to make web page annotations.",
  "version": "1.0",
  "manifest_version": 3,
    "action": {
      "default_icon": { 
        "16": "images/icon.png",
        "24": "images/icon.png",
        "32": "images/icon.png"
      },
      "default_title": "切换工作状态"
    },
  "background": {
    "service_worker": "index.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "/images/icon.png",
    "32": "/images/icon.png",
    "48": "/images/icon.png",
    "128": "/images/icon.png"
  }
}